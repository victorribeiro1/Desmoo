<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Review</title>

        <link rel="icon" type="image/png" sizes="16x16" href="../midias/imagens/favicon.png">

        <link rel="stylesheet" href="../css/review.css">
    </head>
    <body>
        <div class="container">
            <%- include('components/menu.ejs'); %>

            <main class="review">
                <header class="review__header">
                    <a href="/feed" class="review__header__voltar">
                        <div class="review__header__voltar__setinha"></div>
                        <span class="review__header__voltar__texto">Voltar</span>
                    </a>
                    <div class="review__header__autor-e-data">
                        <span class="review__header__autor-e-data__autor">
                            <%=publicacao.nome_autor%>
                        </span>
                        -
                        <span class="review__header__autor-e-data__data">
                            <%=publicacao.data%>
                        </span>
                    </div>
                    <h1 class="review__header__titulo">
                        <%=publicacao.titulo%>
                    </h1>
                    <p class="review__header__descricao">
                        <%=publicacao.descricao%>
                    </p>
                </header>

                <div class="review__conteudo">
                    <img src=<%=publicacao.caminho_imagem%> alt="" class="review__conteudo__img-principal">

                    <div class="review__conteudo__descricao">
                        <%=publicacao.conteudo%>
                    </div>
                </div>
            </main>

            <%- include('components/menu-secundario.ejs'); %>

            <%- include('components/iala.ejs') %>
        </div>
    </body>
</html>